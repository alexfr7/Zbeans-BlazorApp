    IEnumerable<int> mondayTimeValues = new int[] {  }; IEnumerable<int> tuesdayTimeValues = new int[] { }; IEnumerable<int> wednesdayTimeValues = new int[] { }; IEnumerable<int> thursdayTimeValues = new int[] { };
    IEnumerable<int> fridayTimeValues = new int[] { }; IEnumerable<int> saturdayTimeValues = new int[] { }; IEnumerable<int> sundayTimeValues = new int[] { };
