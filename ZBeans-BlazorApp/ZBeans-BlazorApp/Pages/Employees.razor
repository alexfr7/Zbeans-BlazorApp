    }

    //convert all the strings in the list into one list
    protected string ListToString(List<string> list)
    {
        string temp;
        string final;
        temp = string.Empty;
        final = string.Empty;
        foreach(string day in list)
        {
            temp = temp + day;
        }
        return temp;
    }

    //take in the days integer values from the buttons
    //return a string of comma seoerated integers
    protected string IEnumToString(IEnumerable<int> IE)
    {
        string s = string.Empty;
        foreach (int value in IE)
        {
            s = s + "," + value.ToString();
        }

        //maybe eliminate the starting comma
        if (s.Length > 0)
            return s.Remove(0, 1);
        else
            return s;
    }

    //take in the string and parse it to set the buttons properly
    //return the integer array
    protected IEnumerable<int> stringToIEnumInts(string text)
    {

        int integer;
        int index = 0;
        int[] integers = new int[50];
        string[] temp = text.Split(',');
        foreach(string num in temp)
        {
            integer = Int32.Parse(num);
            integers[index] = integer;
            index++;
        }

        IEnumerable<int> final = integers;
        return final;
    }

    protected string NumsToTimes(string availabilityNums)
    {
        string t = "Error";
        if (availabilityNums == "")
            return "Not Scheduled";
        else {
            //make a dictionary of times and values
            IDictionary<int, string> timesDict = new Dictionary<int, string>();
            int value = 1;
            foreach(string time in times)
            {
                timesDict.Add(value, time);
                value++;
            }
            List<string> nums = availabilityNums.Split(',').ToList();
            int integer;
            //find match values in the nums into the dictionary
            foreach (string num in nums)
            {
                integer = Int32.Parse(num);
                t = t + ',' + timesDict[integer];
            }
            return t;
        }
    }

